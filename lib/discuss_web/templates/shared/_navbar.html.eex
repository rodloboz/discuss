<nav class="fused-red">
  <div class="nav-wrapper container">
    <a href="/" class="brand-logo">
      Discussions
    </a>
    <ul class="right">
      <%= if @current_user do %>
        <li>
          <%= link "Logout", to: auth_path(@conn, :delete), method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link "Sign in with Github", to: auth_path(@conn, :request, "github") %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
